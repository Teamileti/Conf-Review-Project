<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
  <!-- Declare properties files. Note that "messages" for base-name really
       means WEB-INF/classes/messages.properties (src/messages.properties in
       the Eclipse project) -->
  <application>
    <resource-bundle>
      <base-name>text</base-name>
      <var>txt</var>
    </resource-bundle>
  </application>
</faces-config>
